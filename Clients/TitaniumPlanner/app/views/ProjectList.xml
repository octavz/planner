<Alloy>
	<Collection src="Project" />
	<Window class="container">
		<ActionBar id="actionbar" title="My2 Projects"  />
		<Menu>
			<MenuItem id="item1" title="My Settings" />
			<MenuItem id="item2" title="Logout" />
		</Menu>
		<TextField id="tfInsert"></TextField>
		<Button id="btnInsert" >Insert</Button>

		<!-- Specifies the collection singleton or instance to bind to the table. -->
		<TableView id="tbProjects" dataCollection="Project">
			<TableViewRow id="listRow" rowId="{id_project}">
				<View id="componentView">
					<Label id="lblValue" text="{name}"></Label>
				</View>
			</TableViewRow>
		</TableView>

	</Window>
</Alloy>