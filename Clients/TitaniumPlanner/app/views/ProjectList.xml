<Alloy>
	<Collection src="Project" />
	<Window class="container" title="My Projects">
		<ActionBar id="actionbar" title="My Projects" displayHomeAsUp="false" />
		<Menu>
			<MenuItem id="menuAdd" title="Add" onClick="OpenAddProject"/>
			<MenuItem id="menuSettings" title="My Settings" onClick="OpenMySettings"/>
			<MenuItem id="menuLogout" title="Logout" onClick="DoLogout"/>
		</Menu>
		<!-- Specifies the collection singleton or instance to bind to the table. -->
		<TableView id="tbProjects" dataCollection="Project" onClick="OpenEditProject">
			<TableViewRow id="listRow" rowId="{id}">
				<View id="componentView">
					<Label id="lblValue" text="{name}"></Label>
				</View>
			</TableViewRow>
		</TableView>
	</Window>
</Alloy>