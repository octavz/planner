<Alloy>
	<Collection src="Task" />
	<Window class="container">
		<Label>Tasks</Label>
		<TextField id="tfInsert"></TextField>
		<Button id="btnInsert" >Insert</Button>

		<!-- Specifies the collection singleton or instance to bind to the table. -->
		<TableView id="tbTasks" dataCollection="Task">
			<TableViewRow id="listRow" rowId="{id_task}">
				<View id="componentView">
					<Label id="lblValue" text="{title}"></Label>
				</View>
			</TableViewRow>

		</TableView>

	</Window>
</Alloy>