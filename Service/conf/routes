# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST         /oauth2/access_token        @org.planner.controllers.UserController.accessToken
POST         /project                    @org.planner.controllers.ProjectController.insertProject
GET          /login                      @org.planner.controllers.UserController.login
POST         /login                      @org.planner.controllers.UserController.loginPost
POST         /register                   @org.planner.controllers.UserController.register
GET          /user/:id/projects          @org.planner.controllers.ProjectController.getUserProjects(id: String)

GET         /api-docs                    controllers.ApiHelpController.getResources
GET         /api-docs/project            controllers.ApiHelpController.getResource(path = "/project")
GET         /api-docs/user               controllers.ApiHelpController.getResource(path = "/user")

GET          /client/*file               controllers.Assets.at(path="/public/client", file)
GET          /docs/*file                 controllers.Assets.at(path="/public/docs", file)
GET          /*file                      controllers.ExternalAssets.at(path="../Client/app",file)

